    {
      "name": "用户注册",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// 准备注册数据",
              "const testEmail = pm.collectionVariables.get('testUserEmail');",
              "const testUsername = pm.collectionVariables.get('testUsername');",
              "",
              "// 更新请求体",
              "const requestBody = {",
              "  username: testUsername,",
              "  email: testEmail,",
              "  password: 'password123'",
              "};",
              "",
              "pm.request.body.raw = JSON.stringify(requestBody, null, 2);",
              "console.log('注册请求数据:', requestBody);"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// 测试用户注册响应",
              "pm.test(\"状态码为200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应结构正确\", function () {",
              "    var responseData = pm.response.json();",
              "    pm.expect(responseData).to.have.property('code', 0);",
              "    pm.expect(responseData).to.have.property('msg', 'Registration successful');",
              "    pm.expect(responseData).to.have.property('data');",
              "    pm.expect(responseData.data).to.have.property('token');",
              "    pm.expect(responseData.data.token).to.be.a('string');",
              "});",
              "",
              "// 保存token到环境变量",
              "if (pm.response.code === 200) {",
              "    var responseData = pm.response.json();",
              "    if (responseData.code === 0) {",
              "        pm.collectionVariables.set('token', responseData.data.token);",
              "        console.log('注册成功，Token已保存: ' + responseData.data.token);",
              "    }",
              "}"
            ]
          }
        }
      ],
      "request": {
