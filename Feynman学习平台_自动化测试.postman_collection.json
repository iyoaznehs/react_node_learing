        {
          "name": "创建知识点",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// 验证token是否存在",
                  "const token = pm.collectionVariables.get('token');",
                  "if (!token) {",
                  "    throw new Error('Token未找到，请先执行登录操作');",
                  "}",
                  "",
                  "// 设置x-auth-token头部",
                  "pm.request.headers.upsert({",
                  "    key: 'x-auth-token',",
                  "    value: token",
                  "});",
                  "",
                  "console.log('使用Token:', token);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// 测试创建知识点响应",
                  "pm.test(\"状态码为200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"知识点创建成功\", function () {",
                  "    var responseData = pm.response.json();",
                  "    pm.expect(responseData).to.have.property('code', 0);",
                  "    pm.expect(responseData).to.have.property('msg', '添加成功');",
                  "    pm.expect(responseData).to.have.property('data');",
                  "    pm.expect(responseData.data).to.have.property('kp');",
                  "    pm.expect(responseData.data.kp).to.have.property('_id');",
                  "    pm.expect(responseData.data.kp).to.have.property('title', '微积分基本定理');",
                  "    pm.expect(responseData.data.kp).to.have.property('content');",
                  "    pm.expect(responseData.data.kp).to.have.property('user');",
                  "    pm.expect(responseData.data.kp).to.have.property('status', 'not_started');",
                  "    pm.expect(responseData.data.kp).to.have.property('reviewList', false);",
                  "});",
                  "",
                  "// 保存知识点ID到环境变量",
                  "if (pm.response.code === 200) {",
                  "    var responseData = pm.response.json();",
                  "    if (responseData.code === 0 && responseData.data.kp) {",
                  "        pm.collectionVariables.set('knowledgePointId', responseData.data.kp._id);",
                  "        console.log('知识点创建成功，ID已保存: ' + responseData.data.kp._id);",
                  "    }",
                  "}"
                ]
              }
            }
