        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// 生成唯一的测试用户数据",
              "const timestamp = new Date().getTime();",
              "const randomNum = Math.floor(Math.random() * 1000);",
              "const testEmail = `testuser_${timestamp}_${randomNum}@example.com`;",
              "const testUsername = `testuser_${timestamp}_${randomNum}`;",
              "",
              "// 设置测试用户变量",
              "pm.collectionVariables.set('testUserEmail', testEmail);",
              "pm.collectionVariables.set('testUsername', testUsername);",
              "",
              "console.log('生成的测试用户:', testEmail);",
              "console.log('测试用户名:', testUsername);"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"]
        }
      },
      "response": []
